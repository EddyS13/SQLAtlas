<UserControl x:Class="DatabaseVisualizer.Views.CodeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        
        <StackPanel Margin="10">

            <Grid Margin="0,0,0,10">
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                    Text="Created On: " 
                    FontWeight="Bold"/>
                
                <TextBlock Grid.Column="1" 
                    x:Name="CreateDateTextBlock" 
                    Margin="5,0,0,0"/>
                
                <TextBlock Grid.Row="1" 
                    Grid.Column="0" 
                    Text="Last Modified: " 
                    FontWeight="Bold"/>
                
                <TextBlock Grid.Row="1"
                    Grid.Column="1" 
                    x:Name="ModifyDateTextBlock" 
                    Margin="5,0,0,0"/>
                
            </Grid>

            <TextBlock Text="Parameters" 
                FontWeight="Bold" 
                Margin="0,0,0,5"/>
            
            <Grid HorizontalAlignment="Left" 
                  Margin="0,0,0,0">
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="NoParametersTextBlock" 
                    Grid.Row="0"
                    Text="— No parameters defined for this object. —" 
                    FontStyle="Italic" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Foreground="{StaticResource FontColor}"
                    Margin="10"
                    Visibility="Collapsed"/>

                <DataGrid x:Name="ParameterGrid" 
                    Grid.Row="0" 
                    HorizontalAlignment="Left" 
                    Margin="0,0,0,0"
                    Width="Auto" 
                    Height="Auto" 
                    AutoGenerateColumns="True"
                    CanUserAddRows="False"/>

            </Grid>

            <TextBlock Text="Dependencies" 
                FontWeight="Bold" 
                Margin="0,15,0,5"/>

            <Grid HorizontalAlignment="Left" 
                  Margin="0,0,0,0">
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="NoDependenciesTextBlock" 
                    Grid.Row="0"
                    Text="— No dependencies found for this object. —" 
                    FontStyle="Italic" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Foreground="{StaticResource FontColor}"
                    Margin="10"
                    Visibility="Collapsed"/>

                <DataGrid x:Name="DependencyGrid" 
                    Grid.Row="0" 
                    HorizontalAlignment="Left" 
                    Margin="0"
                    Width="Auto" 
                    Height="Auto" 
                    AutoGenerateColumns="True"
                    CanUserAddRows="False"/>
                
            </Grid>

            <TextBlock Text="Object Permissions" 
                FontWeight="Bold" 
                Margin="0,15,0,5"/>
            
            <Grid HorizontalAlignment="Left" 
                Margin="0,0,0,0">
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="NoPermissionsTextBlock" 
                    Grid.Row="0"
                    Text="— No explicit permissions defined for this object. —" 
                    FontStyle="Italic" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Foreground="{StaticResource FontColor}"
                    Margin="10"
                    Visibility="Collapsed"/>

                <DataGrid x:Name="PermissionsDataGrid" 
                    Grid.Row="0" 
                    HorizontalAlignment="Left" 
                    Margin="0"
                    Width="Auto" 
                    Height="Auto" 
                    CanUserAddRows="False"
                    AutoGenerateColumns="True"/>
                
            </Grid>

            <TextBlock Text="Object Definition" 
                FontWeight="Bold" 
                Margin="0,15,0,5"/>
            
            <ScrollViewer MaxHeight="400" 
                BorderBrush="{StaticResource BorderColor}" 
                BorderThickness="1" 
                Background="{StaticResource WindowBackground}">
                
                <TextBox x:Name="CodeDefinitionTextBox" 
                    IsReadOnly="True" 
                    TextWrapping="Wrap" 
                    FontFamily="Consolas" 
                    FontSize="12" 
                    BorderThickness="0" 
                    Background="Transparent" 
                    AcceptsReturn="True"/>
                
            </ScrollViewer>

        </StackPanel>
        
    </ScrollViewer>
    
</UserControl>