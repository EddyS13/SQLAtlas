<UserControl x:Class="DatabaseVisualizer.Views.SecurityView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DatabaseVisualizer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        
        <DockPanel Margin="10">

            <TextBlock DockPanel.Dock="Top" 
                Margin="0,0,0,10"
                FontWeight="ExtraBold" FontSize="14"
                Foreground="{StaticResource AccentColor}"
                Text="Object-Level Permissions (Who can access this object)"/>

            <DataGrid x:Name="PermissionsDataGrid" 
                HeadersVisibility="Column"
                CanUserAddRows="False"
                Height="Auto"
                DockPanel.Dock="Top"/>

            <TextBlock DockPanel.Dock="Bottom"
                Margin="0,10,0,0"
                FontStyle="Italic"
                TextWrapping="Wrap"
                Text="Note: Permissions are hierarchical. Roles inherit permissions."/>
            
        </DockPanel>
        
    </Grid>
    
</UserControl>