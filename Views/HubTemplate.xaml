<UserControl x:Class="SQLAtlas.Views.HubTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SQLAtlas.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             HorizontalAlignment="Stretch" 
             VerticalAlignment="Stretch"
             Background="Transparent">
    
    <Grid Margin="40">
        <StackPanel>
            <TextBlock x:Name="HubTitle" Text="SECURITY CENTER" FontSize="32" FontWeight="Bold" Foreground="White"/>
            <TextBlock x:Name="HubSub" Text="Manage users, roles, and data protection." Foreground="{StaticResource MutedFontColor}" Margin="0,5,0,40"/>

            <ItemsControl Grid.Row="1" x:Name="HubStatGrid" Margin="0,0,0,20">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{StaticResource CardBackground}" CornerRadius="12" Padding="20" Margin="10">
                            <StackPanel>
                                <TextBlock Text="{Binding Key}" Foreground="{StaticResource AccentColor}" FontSize="11" FontWeight="Bold" TextAlignment="Center"/>
                                <TextBlock Text="{Binding Value}" FontSize="28" FontWeight="Bold" Foreground="White" TextAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <TextBlock x:Name="AvailableToolsHeader" 
                   Text="AVAILABLE TOOLS" 
                   Foreground="White" 
                   FontWeight="Bold" 
                   Margin="10,30,0,10"/>
            <ItemsControl x:Name="ToolShortcuts">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="2"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Click="ToolBlock_Click" 
                            Tag="{Binding Name}" 
                            Style="{StaticResource EmptyButtonStyle}"
                            Margin="10">
                            <Border Background="{StaticResource CardBackground}" CornerRadius="12" Padding="20">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="{Binding Icon}" FontSize="30" VerticalAlignment="Center"/>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0">
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="18" Foreground="White"/>
                                        <TextBlock Text="{Binding Description}" Foreground="{StaticResource MutedFontColor}" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</UserControl>
