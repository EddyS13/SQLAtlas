<UserControl x:Class="DatabaseVisualizer.Views.ActivityView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <DockPanel Margin="10">

        <Button Content="Refresh Activity" 
                DockPanel.Dock="Top" 
                Margin="0,0,0,10"
                Padding="5"
                x:Name="RefreshActivityButton" 
                Click="RefreshActivityButton_Click"/>

        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,5,0,15">
            <TextBlock FontWeight="Bold" Text="Query Plan Cache Size: "/>
            <TextBlock x:Name="PlanCacheSizeTextBlock" 
                       Text="N/A" 
                       Foreground="{StaticResource AccentColor}" 
                       TextWrapping="Wrap" 
                       Width="200"/>
        </StackPanel>

        <TextBlock DockPanel.Dock="Top" Margin="0,15,0,5" FontWeight="Bold" FontSize="14"
                   Foreground="{StaticResource AccentColor}"
                   Text="Database File and Space Usage" 
                   HorizontalAlignment="Left"/>

        <Grid DockPanel.Dock="Top" Margin="0,0,0,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <DataGrid x:Name="DatabaseSpaceDataGrid" 
                      HeadersVisibility="Column"
                      Grid.Row="0"
                      Height="Auto" 
                      PreviewMouseWheel="DataGrid_PreviewMouseWheel" />
        </Grid>

        <TextBlock DockPanel.Dock="Top" Margin="0,0,0,5" FontWeight="Bold" FontSize="14"
                   Foreground="{StaticResource AccentColor}"
                   Text="Active Sessions and Running Commands"/>

        <DataGrid x:Name="ActivityDataGrid" 
                  HeadersVisibility="Column"
                  PreviewMouseWheel="DataGrid_PreviewMouseWheel"
                  Margin="0, 0, 0, 0"/>

    </DockPanel>
</UserControl>