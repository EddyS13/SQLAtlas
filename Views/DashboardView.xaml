<UserControl x:Class="SQLAtlas.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">

    <Grid Background="{StaticResource DeepBackground}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">

                <Grid Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock Text="SYSTEM OVERVIEW" FontSize="11" FontWeight="SemiBold" 
                                   Foreground="{StaticResource MutedFontColor}" Opacity="0.8"/>
                        <TextBlock x:Name="WelcomeTxt" Text="Welcome to SQL Atlas" FontSize="28" 
                                   FontWeight="Bold" Foreground="White"/>
                    </StackPanel>
                    <TextBlock x:Name="LastRefreshTxt" Text="Last Updated: --:--" 
                               HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                               Foreground="{StaticResource MutedFontColor}"/>
                </Grid>

                <UniformGrid Columns="4" Height="150" Margin="0,0,0,20">

                    <Border Background="{StaticResource CardBackground}" CornerRadius="12" Margin="0,0,10,0" Padding="20">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="SERVER UPTIME" FontSize="11" Foreground="{StaticResource AccentColor}" FontWeight="Bold"  
                               HorizontalAlignment="Center" 
                               TextAlignment="Center"/>
                            <TextBlock x:Name="UptimeTxt" Text="Loading..." FontSize="32" FontWeight="Bold" Foreground="White" Margin="0,10,0,0" 
                               HorizontalAlignment="Center" 
                               TextAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Background="{StaticResource CardBackground}" CornerRadius="12" Padding="20">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="SQL CPU LOAD" 
                               Foreground="{StaticResource MutedFontColor}" 
                               FontSize="11" 
                               FontWeight="SemiBold" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,8"
                               Opacity="0.8"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock x:Name="CpuTxt" 
                                   Text="0" 
                                   FontSize="32" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                               HorizontalAlignment="Center" 
                               TextAlignment="Center"/>

                                <TextBlock Text="%" 
                                   FontSize="14" 
                                   FontWeight="Medium" 
                                   Foreground="{StaticResource SecondaryAccent}" 
                                   VerticalAlignment="Bottom" 
                                   Margin="2,0,0,6" 
                               HorizontalAlignment="Center" 
                               TextAlignment="Center"/>
                            </StackPanel>

                            <ProgressBar x:Name="CpuRingGauge" 
                                 Value="0" 
                                 Maximum="100" 
                                 Height="3" 
                                 Width="80" 
                                 Foreground="{StaticResource SecondaryAccent}" 
                                 Background="#1A1F2E" 
                                 BorderThickness="0" 
                                 Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Background="{StaticResource CardBackground}" CornerRadius="12" Margin="10,0,10,0" Padding="20">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="BLOCKING SESSIONS" 
                               FontSize="11" 
                               Foreground="#EF4444" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               TextAlignment="Center"/>

                            <TextBlock x:Name="BlockingTxt" 
                               Text="0" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               Margin="0,10,0,0" 
                               HorizontalAlignment="Center" 
                               TextAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Background="{StaticResource CardBackground}" CornerRadius="12" Margin="10,0,0,0" Padding="20">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="FAILED LOGINS (24H)" FontSize="11" Foreground="#F59E0B" FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               TextAlignment="Center"/>
                            <TextBlock x:Name="FailedLoginsTxt" Text="0" FontSize="32" FontWeight="Bold" Foreground="White" Margin="0,10,0,0" 
                               HorizontalAlignment="Center" 
                               TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="{StaticResource CardBackground}" CornerRadius="12" Margin="0,0,10,0" Padding="25">
                        <StackPanel>
                            <TextBlock Text="CRITICAL HEALTH CHECKLIST" FontWeight="Bold" Foreground="{StaticResource AccentColor}" Margin="0,0,0,20"/>
                            <ItemsControl x:Name="HealthCheckItems">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#1E293B" CornerRadius="8" Margin="0,0,0,10" Padding="15,10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="30"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="🛡️" VerticalAlignment="Center" FontSize="14"/>

                                                <TextBlock Grid.Column="1" Text="{Binding Message}" 
                                                   Foreground="White" FontWeight="SemiBold" 
                                                   VerticalAlignment="Center" Margin="5,0"/>

                                                <Border Grid.Column="2" 
                                                    Background="{Binding StatusColor}" 
                                                    CornerRadius="12" 
                                                    Padding="12,3" 
                                                    HorizontalAlignment="Right" 
                                                    VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Status}" 
                                                       Foreground="White" 
                                                       FontSize="11" 
                                                       FontWeight="Bold" 
                                                       VerticalAlignment="Center"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Background="{StaticResource CardBackground}" CornerRadius="12" Margin="10,0,0,0" Padding="25">
                        <StackPanel>
                            <TextBlock Text="DB STATUS SUMMARY" FontWeight="Bold" Foreground="{StaticResource AccentColor}" Margin="0,0,0,20"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Online:" Width="80" Foreground="White"/>
                                <TextBlock x:Name="OnlineDbsTxt" Text="0" FontWeight="Bold" Foreground="#22C55E"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Offline:" Width="80" Foreground="White"/>
                                <TextBlock x:Name="OfflineDbsTxt" Text="0" FontWeight="Bold" Foreground="#EF4444"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>