<UserControl x:Class="SQLAtlas.Views.PerformanceOverview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SQLAtlas.Views"
             Background="Transparent"
             Unloaded="UserControl_Unloaded">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource CardBackground}" CornerRadius="12" Padding="25" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Performance Overview" Foreground="{StaticResource FontColor}" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <TextBlock Text="INSTANCE PERFORMANCE" Foreground="{StaticResource AccentColor}" FontSize="12" FontWeight="Bold" Margin="0,0,0,20" Opacity="0.7"/>

                <UniformGrid Columns="4">
                    <StackPanel>
                        <TextBlock Text="CPU USAGE" Foreground="{StaticResource MutedFontColor}" FontSize="11" FontWeight="Bold"/>
                        <TextBlock x:Name="CpuText" Text="0%" Foreground="{StaticResource AccentColor}" FontSize="32" FontWeight="SemiBold" Margin="0,5"/>
                        <ProgressBar x:Name="CpuBar" Value="0" Height="4" Foreground="{StaticResource AccentColor}" Background="{StaticResource BorderColor}" BorderThickness="0" Margin="0,5,30,0"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="MEMORY" Foreground="{StaticResource MutedFontColor}" FontSize="11" FontWeight="Bold"/>
                        <TextBlock x:Name="MemText" Text="0 GB" Foreground="{StaticResource SuccessColor}" FontSize="32" FontWeight="SemiBold" Margin="0,5"/>
                        <ProgressBar x:Name="MemBar" Value="0" Height="4" Foreground="{StaticResource SuccessColor}" Background="{StaticResource BorderColor}" BorderThickness="0" Margin="0,5,30,0"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="CONNECTIONS" Foreground="{StaticResource MutedFontColor}" FontSize="11" FontWeight="Bold"/>
                        <TextBlock x:Name="ConnText" Text="0" Foreground="{StaticResource FontColor}" FontSize="32" FontWeight="SemiBold" Margin="0,5"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="QUERIES / SEC" Foreground="{StaticResource MutedFontColor}" FontSize="11" FontWeight="Bold"/>
                        <TextBlock x:Name="QueryText" Text="0" Foreground="{StaticResource FontColor}" FontSize="32" FontWeight="SemiBold" Margin="0,5"/>
                    </StackPanel>
                </UniformGrid>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="{StaticResource CardBackground}" CornerRadius="12" Padding="20" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="TOTAL TABLES" Foreground="{StaticResource MutedFontColor}" FontSize="10" FontWeight="Bold"/>
                    <TextBlock x:Name="TableCountText" Text="0" Foreground="{StaticResource AccentColor}" FontSize="22" FontWeight="SemiBold"/>
                    <TextBlock Text="IN CURRENT DB" Foreground="{StaticResource AccentColor}" FontSize="9" FontWeight="Bold" Opacity="0.6"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="1" Background="{StaticResource CardBackground}" CornerRadius="12" Padding="20" Margin="10,0,10,0">
                <StackPanel>
                    <TextBlock Text="STORED PROCS" Foreground="{StaticResource MutedFontColor}" FontSize="10" FontWeight="Bold"/>
                    <TextBlock x:Name="ProcCountText" Text="0" Foreground="{StaticResource SuccessColor}" FontSize="22" FontWeight="SemiBold"/>
                    <TextBlock Text="IN CURRENT DB" Foreground="{StaticResource SuccessColor}" FontSize="9" FontWeight="Bold" Opacity="0.6"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="2" Background="{StaticResource CardBackground}" CornerRadius="12" Padding="20" Margin="10,0,0,0">
                <StackPanel>
                    <TextBlock Text="DATABASE SIZE" Foreground="{StaticResource MutedFontColor}" FontSize="10" FontWeight="Bold"/>
                    <TextBlock x:Name="DbSizeText" Text="0" Foreground="{StaticResource FontColor}" FontSize="22" FontWeight="SemiBold"/>
                    <TextBlock Text="STORAGE USED" Foreground="{StaticResource FontColor}" FontSize="9" FontWeight="Bold" Opacity="0.6"/>
                </StackPanel>
            </Border>
        </Grid>

        <Border Grid.Row="2" Background="{StaticResource CardBackground}" CornerRadius="12" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <TextBlock Text="RECENT ACTIVITY" Foreground="{StaticResource FontColor}" FontSize="12" FontWeight="Bold" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="Auto-refresh: 60s" Foreground="{StaticResource MutedFontColor}" VerticalAlignment="Center" Margin="0,0,15,0" FontSize="10" FontStyle="Italic"/>
                        <TextBlock Text="Filter:" Foreground="{StaticResource MutedFontColor}" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="11"/>
                        <ComboBox x:Name="CategoryFilter" Width="140" SelectedIndex="0" 
          SelectionChanged="CategoryFilter_SelectionChanged"
          Foreground="{StaticResource FontColor}" 
          BorderThickness="0" VerticalContentAlignment="Center">
                            <ComboBox.Resources>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Background" Value="{StaticResource CardBackground}"/>
                                    <Setter Property="Foreground" Value="{StaticResource FontColor}"/>
                                    <Setter Property="Padding" Value="10,6"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsHighlighted" Value="True">
                                            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
                                            <Setter Property="Foreground" Value="{StaticResource DeepBackground}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>

                                <Style TargetType="ComboBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ComboBox">
                                                <Grid>
                                                    <ToggleButton x:Name="ToggleButton" 
                                          Background="{StaticResource BorderColor}" 
                                          BorderThickness="1" 
                                          BorderBrush="{StaticResource BorderColor}"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          Focusable="false" ClickMode="Press">
                                                        <ToggleButton.Template>
                                                            <ControlTemplate TargetType="ToggleButton">
                                                                <Border CornerRadius="6" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*"/>
                                                                            <ColumnDefinition Width="30"/>
                                                                        </Grid.ColumnDefinitions>
                                                                        <Path Grid.Column="1" Fill="{StaticResource MutedFontColor}" Data="M 0 0 L 4 4 L 8 0 Z" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Grid>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </ToggleButton.Template>
                                                    </ToggleButton>

                                                    <ContentPresenter x:Name="ContentSite" IsHitTestVisible="False" 
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="12,3,23,3" VerticalAlignment="Center" HorizontalAlignment="Left">
                                                        <ContentPresenter.Resources>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground" Value="{StaticResource FontColor}"/>
                                                            </Style>
                                                        </ContentPresenter.Resources>
                                                    </ContentPresenter>

                                                    <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                                        <Grid x:Name="DropDown" SnapsToDevicePixels="True" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                                            <Border x:Name="DropDownBorder" Background="{StaticResource CardBackground}" BorderThickness="1" BorderBrush="{StaticResource BorderColor}" CornerRadius="0,0,6,6"/>
                                                            <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                                                <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                                            </ScrollViewer>
                                                        </Grid>
                                                    </Popup>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ComboBox.Resources>

                            <ComboBoxItem Content="All Categories"/>
                            <ComboBoxItem Content="System"/>
                            <ComboBoxItem Content="Job"/>
                            <ComboBoxItem Content="Session"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <ListView x:Name="ActivityListView" Grid.Row="1" 
                          ItemsSource="{Binding Activities}"
                          Background="Transparent" BorderThickness="0"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">

                    <ListView.Resources>
                        <Style TargetType="{x:Type GridViewColumnHeader}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
                                        <Border Background="Transparent" BorderThickness="0,0,0,1" BorderBrush="{StaticResource BorderColor}" Padding="5,8">
                                            <TextBlock Text="{TemplateBinding Content}" 
                                                       Foreground="{StaticResource MutedFontColor}" 
                                                       FontSize="11" FontWeight="Bold"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>

                        <Style TargetType="{x:Type ListViewItem}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="{StaticResource FontColor}"/>
                            <Setter Property="Margin" Value="0,2"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="0,4">
                                            <GridViewRowPresenter VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource BorderColor}"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{StaticResource BorderColor}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.Resources>

                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="" Width="30">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Ellipse Width="8" Height="8" Fill="{Binding StatusColor}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="TIMESTAMP" Width="140">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Date}" Foreground="{StaticResource MutedFontColor}" Margin="0,0,5,0" FontSize="11"/>
                                            <TextBlock Text="{Binding Time}" Foreground="{StaticResource FontColor}" FontSize="11"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="CATEGORY" Width="90" DisplayMemberBinding="{Binding Category}"/>
                            <GridViewColumn x:Name="MessageColumn" Header="MESSAGE" Width="500" DisplayMemberBinding="{Binding Message}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Border>
    </Grid>
</UserControl>