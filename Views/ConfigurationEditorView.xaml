<UserControl x:Class="SQLAtlas.Views.ConfigurationEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"              
             d:DesignHeight="600" d:DesignWidth="800">

    <DockPanel Margin="10">

        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">

            <TextBlock FontWeight="ExtraBold" FontSize="16"
                       Foreground="{StaticResource AccentColor}"
                       Text="Server &amp; Database Configuration Editor"
                       VerticalAlignment="Center"/>

            <Button Content="Quick Reference Notes" 
                    Click="ShowConfigNotesButton_Click" 
                    Margin="15,0,0,0" 
                    Width="150"
                    VerticalAlignment="Center"/>
        </StackPanel>

        <Button Content="Refresh Settings" DockPanel.Dock="Top" Margin="0,0,0,10"
                x:Name="RefreshConfigButton" Click="RefreshConfigButton_Click"/>

        <TextBlock DockPanel.Dock="Top" Text="Configurable Server Options (sp_configure)" FontWeight="Bold" Margin="0,0,0,5"/>
        <DataGrid x:Name="ServerConfigGrid" AutoGenerateColumns="True" CanUserAddRows="False" DockPanel.Dock="Top" Height="300" Margin="0,0,0,20"/>

        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,5">
            <TextBlock Text="Database Configuration (Recovery Model, State, etc.)" 
               FontWeight="Bold" 
               Margin="0,0,15,0" 
               VerticalAlignment="Center"/>

            <Button Content="Guidance Notes" 
            Click="ShowDatabaseGuidanceButton_Click" 
            Width="120"/>
        </StackPanel>

        <DataGrid x:Name="DatabaseConfigGrid" AutoGenerateColumns="False" CanUserAddRows="False" 
                  DockPanel.Dock="Top" Height="200" Margin="0,0,0,15">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Property Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Current Value" Binding="{Binding CurrentValue}" Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>

    </DockPanel>
</UserControl>