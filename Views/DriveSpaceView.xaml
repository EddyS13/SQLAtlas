<UserControl x:Class="SQLAtlas.Views.DriveSpaceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SQLAtlas.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1100">

    <Grid Background="{StaticResource DeepBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource CardBackground}" CornerRadius="12" Margin="20,20,20,10" Padding="25">
            <Grid>
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="💽" Foreground="{StaticResource AccentColor}" FontSize="22" Margin="0,0,15,0" VerticalAlignment="Center"/>
                        <TextBlock Text="DRIVE SPACE &amp; FILE MONITOR" FontSize="24" FontWeight="Bold" Foreground="{StaticResource FontColor}"/>
                    </StackPanel>
                    <TextBlock Text="MONITORING PHYSICAL DISK CAPACITY AND MOUNT POINTS" Foreground="{StaticResource MutedFontColor}" Margin="37,5,0,0" FontSize="13" FontWeight="SemiBold" Opacity="0.7"/>
                </StackPanel>

                <Button x:Name="RefreshDriveButton" HorizontalAlignment="Right" VerticalAlignment="Center"
                        Padding="20,10" Click="RefreshDriveButton_Click"
                        Background="{StaticResource BorderColor}" Foreground="{StaticResource FontColor}" 
                        FontWeight="SemiBold" BorderThickness="0" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                    <TextBlock Text="REFRESH DRIVE STATUS"/>
                </Button>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="{StaticResource CardBackground}" CornerRadius="12" Margin="20,0,20,20" Padding="20">
            <Grid>
                <DataGrid x:Name="DriveSpaceGrid" 
                          AlternatingRowBackground="{StaticResource GridAlternateRowBackground}"
                          AutoGenerateColumns="False" Background="Transparent" BorderThickness="0"
                          CanUserAddRows="False">

                    <DataGrid.Resources>
                        <StaticResource x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" ResourceKey="AccentColor"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="White"/>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="DRIVE" Binding="{Binding DriveLetter}" Width="80"/>
                        <DataGridTextColumn Header="LABEL" Binding="{Binding VolumeName}" Width="1.5*"/>

                        <DataGridTextColumn Header="FREE (GB)" Binding="{Binding FreeSpaceGB, StringFormat=\{0:N2\}}" Width="100"/>
                        <DataGridTextColumn Header="TOTAL (GB)" Binding="{Binding TotalSizeGB, StringFormat=\{0:N2\}}" Width="100"/>

                        <DataGridTemplateColumn Header="USAGE" Width="2*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid Margin="5,0">
                                        <ProgressBar Value="{Binding PercentFull, Mode=OneWay}" 
                                             Maximum="100" Height="14" 
                                             Background="#333" BorderThickness="0">
                                            <ProgressBar.Foreground>
                                                <Binding Path="PercentFull" Mode="OneWay">
                                                    <Binding.Converter>
                                                        <local:PercentToBrushConverter/>
                                                    </Binding.Converter>
                                                </Binding>
                                            </ProgressBar.Foreground>
                                        </ProgressBar>
                                        <TextBlock Text="{Binding PercentFull, StringFormat=\{0:F0\}%}" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           FontSize="9" FontWeight="Bold" Foreground="White"/>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="FILE COUNT" Binding="{Binding DatabaseFileCount}" Width="100"/>

                        <DataGridTextColumn Header="DATABASES" Binding="{Binding DatabaseFiles}" Width="2*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="5,0"/>
                                    <Setter Property="Cursor" Value="Help"/>
                                    <Setter Property="ToolTip" Value="{Binding DatabaseFiles}"/>
                                    <Style.Resources>
                                        <Style TargetType="ToolTip" BasedOn="{StaticResource {x:Type ToolTip}}">
                                            <Setter Property="MaxWidth" Value="400"/>
                                            <Setter Property="ContentTemplate">
                                                <Setter.Value>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding}" TextWrapping="Wrap" />
                                                    </DataTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Style.Resources>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>