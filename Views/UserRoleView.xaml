<UserControl x:Class="DatabaseVisualizer.Views.UserRoleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DatabaseVisualizer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">

            <TextBlock Text="Database User and Role Audit" 
                       FontWeight="ExtraBold" 
                       FontSize="16" 
                       Foreground="{StaticResource AccentColor}" 
                       Margin="0,0,0,10"/>

            <TextBlock Text="Active Database Principals and Roles" FontWeight="Bold" Margin="0,5,0,5"/>

            <Grid Height="Auto" MaxHeight="300" Margin="0,0,0,15">

                <DataGrid x:Name="UsersRolesGrid" 
                  HeadersVisibility="Column" 
                  CanUserAddRows="False"
                  Height="Auto" 
                  MaxHeight="300"/>

                <TextBlock x:Name="NoPrincipalsTextBlock" 
                   Text="— No active principals or roles found. —" 
                   FontStyle="Italic" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Foreground="{StaticResource FontColor}"
                   Visibility="Collapsed"/>

            </Grid>

        </StackPanel>
    </ScrollViewer>
</UserControl>