<UserControl x:Class="DatabaseVisualizer.Views.WaitStatsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DatabaseVisualizer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <DockPanel Margin="10">

            <Button Content="Refresh Performance Data" 
                DockPanel.Dock="Top" 
                Margin="0,0,0,10" 
                Padding="5"
                x:Name="RefreshPerformanceButton" 
                Click="RefreshPerformanceButton_Click"/>

            <TextBlock DockPanel.Dock="Top" 
                Margin="0,0,0,10" 
                FontWeight="ExtraBold"
                FontSize="14"
                Foreground="{StaticResource AccentColor}"
                Text="Top 10 Wait Statistics (Cumulative Bottlenecks)"/>

            <ScrollViewer VerticalScrollBarVisibility="Auto">

                <StackPanel>

                    <DataGrid x:Name="WaitStatsDataGrid" 
                        CanUserAddRows="False"
                        Height="Auto"
                        HeadersVisibility="Column"/>

                </StackPanel>

            </ScrollViewer>

        </DockPanel>

    </Grid>
</UserControl>
