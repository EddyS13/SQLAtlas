<UserControl x:Class="SQLAtlas.Views.SnippetLibraryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SQLAtlas.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Column="0">
            <TextBlock DockPanel.Dock="Top" Text="Snippet Categories" FontWeight="Bold" Margin="0,0,0,5"/>
            <ListBox x:Name="SnippetListBox" 
                     Background="Transparent"
                     SelectionMode="Single"
                     SelectionChanged="SnippetListBox_SelectionChanged">

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Title}" Margin="5,3"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>

                <ListBox.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="{StaticResource AccentColor}" Margin="0,5,0,0"/>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </ListBox.GroupStyle>
            </ListBox>
        </DockPanel>

        <StackPanel Grid.Column="2" Margin="10,0,0,0">
            <TextBlock x:Name="SnippetTitleTextBlock" Text="Select a SQL Snippet" 
                       FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>

            <TextBlock x:Name="SnippetDescriptionTextBlock" Text="Description: Select a snippet from the left to view details and code." 
                       TextWrapping="Wrap" Margin="0,0,0,10" FontStyle="Italic"/>

            <Button x:Name="CopyButton" Content="📋 Copy Code to Clipboard" 
                    HorizontalAlignment="Left" 
                    Click="CopyButton_Click"
                    IsEnabled="False"
                    Margin="0,0,0,10"/>

            <TextBlock Text="T-SQL Code" FontWeight="Bold" Margin="0,0,0,5"/>
            <ScrollViewer Height="450" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" 
                          Background="{StaticResource WindowBackground}">
                <TextBox x:Name="CodeDisplayTextBox" 
                         IsReadOnly="True" 
                         FontFamily="Consolas" 
                         TextWrapping="Wrap" 
                         BorderThickness="0"
                         Background="Transparent"/>
            </ScrollViewer>

        </StackPanel>
    </Grid>
</UserControl>
