<UserControl x:Class="SQLAtlas.Views.SnippetLibraryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Background="{StaticResource DeepBackground}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{StaticResource CardBackground}" Margin="20,20,10,20" CornerRadius="12">
            <DockPanel Margin="15">
                <TextBlock DockPanel.Dock="Top" Text="SQL SNIPPETS" Foreground="{StaticResource AccentColor}" 
                   FontWeight="Bold" FontSize="14" Margin="0,0,0,15"/>

                <Border DockPanel.Dock="Top" Background="{StaticResource DeepBackground}" CornerRadius="6" Padding="8,5" Margin="0,0,0,15">
                    <Grid>
                        <TextBlock Text="Search snippets..." Foreground="{StaticResource MutedFontColor}" 
                           IsHitTestVisible="False" VerticalAlignment="Center" Margin="5,0"
                           Visibility="{Binding Text.IsEmpty, ElementName=SearchBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                        <TextBox x:Name="SearchBox" 
                         Background="Transparent" 
                         BorderThickness="0" 
                         Foreground="White" 
                         TextChanged="SearchBox_TextChanged" 
                         VerticalAlignment="Center"
                         CaretBrush="{StaticResource AccentColor}"/>
                    </Grid>
                </Border>

                <ListBox x:Name="SnippetListBox" Background="Transparent" BorderThickness="0"
                 SelectionMode="Single" SelectionChanged="SnippetListBox_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="10,8" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1">
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Category}" Foreground="{StaticResource MutedFontColor}" FontSize="10"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                    <ListBox.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="{StaticResource AccentColor}" 
                                       Margin="0,15,0,5" FontSize="11"/>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ListBox.GroupStyle>
                </ListBox>
            </DockPanel>
        </Border>

        <Border Grid.Column="1" Background="{StaticResource CardBackground}" Margin="10,20,20,20" CornerRadius="12">
            <DockPanel Margin="25">
                <Grid DockPanel.Dock="Top" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock x:Name="SnippetTitleTextBlock" Text="Select a Snippet" FontSize="22" FontWeight="Bold" Foreground="White"/>
                        <TextBlock x:Name="SnippetDescriptionTextBlock" Foreground="{StaticResource MutedFontColor}" TextWrapping="Wrap" Margin="0,5,0,0"/>
                    </StackPanel>
                    <Button x:Name="CopyButton" HorizontalAlignment="Right" Style="{StaticResource ActionButtonStyle}" Click="CopyButton_Click" IsEnabled="False" Padding="15,8" Content="COPY CODE"/>
                </Grid>

                <Separator DockPanel.Dock="Top" Background="{StaticResource BorderColor}" Opacity="0.3" Margin="0,0,0,20"/>

                <Border Background="{StaticResource DeepBackground}" CornerRadius="8" Padding="0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <TextBox x:Name="CodeDisplayTextBox" 
                                 IsReadOnly="True" 
                                 Background="Transparent" 
                                 Foreground="#DCDCAA" 
                                 BorderThickness="0" 
                                 FontFamily="Consolas" 
                                 FontSize="13"
                                 Padding="15" 
                                 Margin="0"
                                 AcceptsReturn="True"
                                 TextWrapping="NoWrap"/>
                    </ScrollViewer>
                </Border>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>