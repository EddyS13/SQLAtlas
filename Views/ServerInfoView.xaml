<UserControl x:Class="SQLAtlas.Views.ServerInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SQLAtlas.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <DockPanel Margin="10">
        <TextBlock DockPanel.Dock="Top" Margin="0,0,0,10" FontWeight="ExtraBold" FontSize="16"
                   Foreground="{StaticResource AccentColor}"
                   Text="General Server and Database Configuration"/>

        <Button Content="Refresh Server Info" 
                DockPanel.Dock="Top" 
                Margin="0,0,0,10"
                Padding="5"
                x:Name="RefreshServerInfoButton" 
                Click="RefreshServerInfoButton_Click"/>

        <DataGrid x:Name="ServerInfoDataGrid" 
                  HeadersVisibility="Column" 
                  AutoGenerateColumns="True"
                  CanUserAddRows="False"/>
    </DockPanel>
</UserControl>