<UserControl x:Class="SQLAtlas.Views.SchemaCompareView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1100">

    <Grid Background="{StaticResource DeepBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource CardBackground}" CornerRadius="12" Margin="20,20,20,10" Padding="25">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="🔄" FontSize="22" Margin="0,0,15,0" VerticalAlignment="Center"/>
                    <TextBlock Text="SCHEMA COMPARISON ENGINE" FontSize="24" FontWeight="Bold" Foreground="{StaticResource FontColor}"/>
                </StackPanel>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="TARGET SERVER" Foreground="{StaticResource MutedFontColor}" FontSize="10" FontWeight="Bold" Margin="0,0,0,5"/>

                    <Grid Grid.Row="0" Grid.Column="2">
                        <TextBlock x:Name="UserLabel" Text="SQL USERNAME" Foreground="{StaticResource MutedFontColor}" 
                            FontSize="10" FontWeight="Bold" Margin="0,0,0,5" Visibility="Collapsed" HorizontalAlignment="Left"/>

                        <CheckBox x:Name="WindowsAuthCheckBox" Content="Use Windows Authorization" 
                            Foreground="White" IsChecked="True" Click="AuthType_Changed" 
                            HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                    </Grid>

                    <TextBox x:Name="TargetServerTextBox" Grid.Row="1" Grid.Column="0" Text="localhost" Padding="10" 
                     Background="{StaticResource DeepBackground}" Foreground="White" 
                     BorderThickness="1" BorderBrush="{StaticResource BorderColor}"/>

                    <StackPanel x:Name="UserPanel" Grid.Row="1" Grid.Column="2" Visibility="Collapsed">
                        <TextBox x:Name="TargetUserTextBox" Padding="10" 
                         Background="{StaticResource DeepBackground}" Foreground="White" 
                         BorderThickness="1" BorderBrush="{StaticResource BorderColor}"/>
                    </StackPanel>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="TARGET DATABASE" Foreground="{StaticResource MutedFontColor}" FontSize="10" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock x:Name="PassLabel" Grid.Row="3" Grid.Column="2" Text="SQL PASSWORD" Foreground="{StaticResource MutedFontColor}" 
                       FontSize="10" FontWeight="Bold" Margin="0,0,0,5" Visibility="Collapsed"/>

                    <TextBox x:Name="TargetDatabaseTextBox" Grid.Row="4" Grid.Column="0" Text="TargetDB" Padding="10" 
                     Background="{StaticResource DeepBackground}" Foreground="White" 
                     BorderThickness="1" BorderBrush="{StaticResource BorderColor}"/>

                    <StackPanel x:Name="PassPanel" Grid.Row="4" Grid.Column="2" Visibility="Collapsed">
                        <PasswordBox x:Name="TargetPasswordBox" Padding="10" 
                             Background="{StaticResource DeepBackground}" Foreground="White" 
                             BorderThickness="1" BorderBrush="{StaticResource BorderColor}"/>
                    </StackPanel>

                    <Button x:Name="CompareButton" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3"
                    Content="RUN COMPARISON" Click="CompareButton_Click" 
                    Margin="0,30,0,0" Padding="20,12" Background="{StaticResource AccentColor}" 
                    Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand"
                    Style="{StaticResource ActionButtonStyle}"/>
                </Grid>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Background="{StaticResource CardBackground}" CornerRadius="12" Margin="20,0,20,20" Padding="20">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="DETECTED SCHEMA DIFFERENCES" Foreground="{StaticResource AccentColor}" FontWeight="Bold" Margin="0,0,0,15"/>

                <DataGrid x:Name="DifferencesDataGrid" AutoGenerateColumns="False" 
                          Background="Transparent" BorderThickness="0" CanUserAddRows="False"
                          AlternatingRowBackground="{StaticResource GridAlternateRowBackground}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="OBJECT" Binding="{Binding ObjectName}" Width="1.5*"/>
                        <DataGridTextColumn Header="COLUMN" Binding="{Binding ColumnName}" Width="1*"/>

                        <DataGridTemplateColumn Header="TYPE" Width="180">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="10" Padding="8,2" HorizontalAlignment="Left" x:Name="DiffPill" Background="#F59E0B">
                                        <TextBlock Text="{Binding DifferenceType}" FontSize="10" FontWeight="Bold" Foreground="White"/>
                                    </Border>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding DifferenceType}" Value="TABLE Missing in Target">
                                            <Setter TargetName="DiffPill" Property="Background" Value="#EF4444"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding DifferenceType}" Value="Column Missing in Target">
                                            <Setter TargetName="DiffPill" Property="Background" Value="#3B82F6"/>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="SYNC SCRIPT" Width="2*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding SynchronizationScript}" VerticalAlignment="Center" 
                                                   TextTrimming="CharacterEllipsis" Opacity="0.7" FontFamily="Consolas"/>
                                        <Button Grid.Column="1" Content="Copy" Style="{StaticResource ActionButtonStyle}" 
                                                Margin="5,0,0,0" Click="CopyScript_Click"/>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>