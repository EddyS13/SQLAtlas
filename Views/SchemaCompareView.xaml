<UserControl x:Class="SQLAtlas.Views.SchemaCompareView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SQLAtlas.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel Margin="10">
        <TextBlock DockPanel.Dock="Top" Margin="0,0,0,15" FontWeight="ExtraBold" FontSize="16"
               Foreground="{StaticResource AccentColor}"
               Text="Schema Comparison and Synchronization"/>

        <StackPanel DockPanel.Dock="Top" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Target Server:" Margin="0,5,5,0"/>
                <TextBox x:Name="TargetServerTextBox" Width="150" Margin="0,0,10,0" Text="localhost"/>
                <TextBlock Text="Target Database:" Margin="0,5,5,0"/>
                <TextBox x:Name="TargetDatabaseTextBox" Width="150" Margin="0,0,10,0" Text="TargetDB"/>
                <CheckBox x:Name="WindowsAuthCheckBox" Content="Use Windows Auth" Margin="10,5,0,0" IsChecked="True" 
                         Click="AuthType_Changed"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" x:Name="CredentialPanel" Visibility="Collapsed">
                <TextBlock Text="Username:" Margin="0,5,5,0"/>
                <TextBox x:Name="TargetUserTextBox" Width="150" Margin="0,0,10,0"/>
                <TextBlock Text="Password:" Margin="0,5,5,0"/>
                <PasswordBox x:Name="TargetPasswordBox" Width="150" Margin="0,0,10,0"/>
            </StackPanel>

            <Button x:Name="CompareButton" Content="Compare Schemas" Click="CompareButton_Click" Width="150" HorizontalAlignment="Left" Margin="0,10,0,0"/>
        </StackPanel>

        <DataGrid x:Name="DifferencesDataGrid" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Object Name" Binding="{Binding ObjectName}" Width="*"/>
                <DataGridTextColumn Header="Column/Type" Binding="{Binding ColumnName}" Width="*"/>
                <DataGridTextColumn Header="Data Type" Binding="{Binding DataType}" Width="Auto"/>
                <DataGridTextColumn Header="Difference Type" Binding="{Binding DifferenceType}" Width="1.5*"/>
                <DataGridTextColumn Header="Synchronization Script" Binding="{Binding SynchronizationScript}" Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
