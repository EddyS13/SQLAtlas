<Window x:Class="SQLAtlas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:SQLAtlas.Converters"
        Title="SQL Atlas" Height="700" Width="600"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="RoundedField" TargetType="{x:Type Control}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Control}">
                        <Border x:Name="Border" Background="#0F172A" CornerRadius="8" BorderThickness="1" BorderBrush="{StaticResource BorderColor}">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="10,8"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#0B111B" CornerRadius="15" BorderThickness="1" BorderBrush="{StaticResource BorderColor}" MouseLeftButtonDown="MainBorder_MouseLeftButtonDown">
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,40">
                <Image Source="pack://application:,,,/Images/SQLAtlasLogo.png" Width="60" Height="60" Margin="0,0,20,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                <TextBlock Text="SQL Atlas" Foreground="#22D3EE" FontSize="26" FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>

            <Border Grid.Row="1" Background="{StaticResource CardBackground}" CornerRadius="12" Padding="30">
                <StackPanel>
                    <TextBlock Text="Connect to SQL Server" Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,0,0,25"/>

                    <TextBlock Text="Server Name:" Foreground="#9CA3AF" FontSize="11" Margin="0,0,0,8"/>
                    <TextBox x:Name="ServerNameTextBox" Style="{StaticResource RoundedField}" Height="40" Margin="0,0,0,20" Foreground="White" Text="localhost"/>

                    <TextBlock Text="Database Name:" Foreground="#9CA3AF" FontSize="11" Margin="0,0,0,8"/>
                    <TextBox x:Name="DatabaseNameTextBox" Style="{StaticResource RoundedField}" Height="40" Margin="0,0,0,20" Foreground="White"/>

                    <StackPanel x:Name="SqlAuthFields" Visibility="Collapsed">
                        <TextBlock Text="Username:" Foreground="#9CA3AF" FontSize="11" Margin="0,0,0,8"/>
                        <TextBox x:Name="UsernameTextBox" Style="{StaticResource RoundedField}" Height="40" Margin="0,0,0,20" Foreground="White"/>

                        <TextBlock Text="Password:" Foreground="#9CA3AF" FontSize="11" Margin="0,0,0,8"/>
                        <PasswordBox x:Name="PasswordBox" Style="{StaticResource RoundedField}" Height="40" Margin="0,0,0,20" Foreground="White"/>
                    </StackPanel>

                    <CheckBox x:Name="AuthCheckBox" Content="Use SQL Server Authentication" 
                              Foreground="#9CA3AF" Margin="0,5,0,30" 
                              Checked="AuthCheckBox_Toggled" Unchecked="AuthCheckBox_Toggled"/>

                    <Button x:Name="ConnectButton" Content="Connect" Height="45" Background="{StaticResource AccentColor}" Foreground="#0B111B" FontWeight="Bold" BorderThickness="0" Click="ConnectButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <TextBlock x:Name="StatusTextBlock" Margin="0,15,0,0" TextAlignment="Center" FontSize="12"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>